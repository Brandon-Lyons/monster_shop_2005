<%= form_tag path, method: method do %>
<%= label_tag :name %><br>
<%= text_field_tag :name, @user.name, placeholder: "Name" %><br>
<%= label_tag :address %><br>
<%= text_field_tag :address, @user.address, placeholder: "Address" %><br>
<%= label_tag :city %><br>
<%= text_field_tag :city, @user.city, placeholder: "City" %><br>
<%= label_tag :state %><br>
<%= text_field_tag :state, @user.state, placeholder: "State" %><br>
<%= label_tag :zip %><br>
<%= text_field_tag :zip, @user.zip, placeholder: "Zip" %><br>
<%= label_tag :email %><br>
<%= text_field_tag :email, placeholder: "Email" %><br>
<%= label_tag :password %><br>
<%= text_field_tag :password, placeholder: "Password" %><br>
<%= label_tag :password_confirmation %><br>
<%= text_field_tag :password_confirmation, placeholder: "Password Confirmation" %><br>

<%= submit_tag button_text, class: :button %>
<% end %>
